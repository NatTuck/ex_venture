<section class="content-header">
  <h1>
    Watching <%= @character.name %>
  </h1>

  <ol class="breadcrumb">
    <li>
      <%= link(to: dashboard_path(@conn, :index)) do %>
        <i class="fa fa-dashboard"></i> Home
      <% end %>
    </li>
    <li><%= link("Users", to: user_path(@conn, :index)) %></li>
    <li><%= link(@character.user.name, to: user_path(@conn, :show, @character.user_id)) %></li>
    <li><%= link(@character.name, to: character_path(@conn, :show, @character.id)) %></li>
    <li class="active">Watch</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Stream</h3>
        </div>
        <div class="box-body">
          <pre class="console" style="height: 600px; overflow-y: scroll"></pre>
        </div>
      </div>
    </div>
  </div>
</section>

<script type="application/javascript">
$(function () {
  new CharacterSocket(<%= @character.id %>).connect();
});
</script>
